<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/corner_radius_eight"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imvProduct"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/txvProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvProduct"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="@string/home" />

    <TextView
        android:id="@+id/txvProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvProductName"
        android:layout_marginTop="2dp"
        android:maxLines="3"
        android:textColor="@color/black"
        tools:text="@string/home" />
</RelativeLayout>